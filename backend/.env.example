# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://forma:forma_password@localhost:5432/forma_db
REDIS_URL=redis://localhost:6379

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=super_secret_jwt_key_change_this_in_production_2024
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# API Keys (KEEP THESE SECRET!)
# Get your OpenAI API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_key

# CedarOS API key (if using real CedarOS service)
CEDAROS_KEY=your_cedaros_key_here

# Mastra API key (if using real Mastra service)
MASTRA_KEY=your_mastra_secret_here

# External Service URLs
CEDAROS_API_URL=http://localhost:8080
MASTRA_URL=http://localhost:8081

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
