# Production Environment Variables for Backend
# IMPORTANT: Replace all placeholder values with real production values

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database Configuration (HARDENED)
DATABASE_URL=postgresql://ptadmin:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/ptapp
POSTGRES_USER=ptadmin
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=ptapp

# Redis Configuration (HARDENED)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_SUPER_SECURE_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_THIS_SUPER_SECURE_REDIS_PASSWORD@redis:6379

# JWT Configuration (CRITICAL - MUST BE UNIQUE)
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_AND_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# API Keys (REPLACE WITH REAL KEYS)
OPENAI_API_KEY=sk-your-real-openai-api-key-here
CEDAROS_API_KEY=your-real-cedaros-api-key-here
MASTRA_API_KEY=your-real-mastra-api-key-here

# External Service URLs
CEDAROS_API_URL=http://cedaros:8080
MASTRA_API_URL=http://mastra:8081

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Monitoring Configuration (OPTIONAL)
MONITORING_WEBHOOK_URL=https://your-monitoring-service.com/webhook
SLACK_CHANNEL=#alerts
ALERT_EMAIL=alerts@yourdomain.com

# SSL Configuration
SSL_EMAIL=admin@yourdomain.com
DOMAIN_NAME=yourdomain.com
